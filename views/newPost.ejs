<style>
.form-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  
  .form-subtitle {
    font-size: 18px;
    margin-bottom: 10px;
  }
  
  .form-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .form-textarea {
    width: 100%;
    height: 100px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .form-submit {
    background-color: #000;
    color: #fff;
    padding: 10px;
    border: 1px solid #000;
    border-radius: 5px;
    cursor: pointer;
  }
  
  .form-submit:hover {
    background-color: #333;
  }
  </style>
  <form action="/newPost" method="post">
    <h1 class="form-title">New Post</h1>
    <h2 class="form-subtitle">Please enter your information below.</h2>
  
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-input" />
  
    <label for="subtitle">Subtitle</label>
    <input type="text" name="subtitle" id="subtitle" class="form-input" />
  
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-textarea"></textarea>
  


    <button type="submit" class="form-submit">Submit</button>
    <button class="form-submit"><a href="/">Cancel</a></button>
  </form>
  